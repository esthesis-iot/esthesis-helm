{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "KrakenD - API Gateway",
  "timeout": "3000ms",
  "cache_ttl": "300s",
  "output_encoding": "no-op",
  "endpoints": [
    {
      "endpoint": "/api/public-access/{url}",
      "backend": [
        {
          "url_pattern": "/api/{url}",
          "host": [
            "{{ .Release.Name }}-srv-public-access-service:8080"
          ]
        }
      ]
    }
  ],
  "extra_config": {
    "telemetry/logging": {
      "level": "INFO",
      "prefix": "[KRAKEND]",
      "syslog": false,
      "stdout": true
    }
  }
}
